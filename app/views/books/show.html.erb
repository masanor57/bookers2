<p id="notice"></p>
<div class='row'>
  <div class='col-md-3'>
  <h2>User info</h2>
  <table class="table table-hover">
  <thead>
    <tr>
      <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>
    <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: @newbook, url:'/books', local:true do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit 'Create Book' %>
  <% end %>
  </div>
<div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
    <table class='table table-hover '>
    <tbody>
      <tr>
        <th>
          <div>
            <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
              <p><%= @book.user.name %></p>
            <% end %>
          </div>
        </th>
        <th><%= @book.title %></th>
        <th><%= @book.body %></th>
        <% if @book.user == current_user %>
          <th><%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-sm btn-success' %></th>
          <th><%= link_to 'Destroy', book_path(@book),  class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "本当に削除しますか？"} %></th>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>