<p></p>
<div class='row'>
<div class='col-md-3'>
<%= render 'layouts/error_messages', user: @book %>
 <h2>User info</h2>
 <table class="table table-hover">
 <thead>
    <tr>
      <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>

  <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
    <h2 class="mt-3">New book</h2>

    <%= form_with model: @book, url:'/books', local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
    <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
     <h2>Books</h2>
     <table class="table table-hover">
      <thead>
      <th>Title
      </th>
      <th>Opinion
      </th>
      </thead>
    <tbody>
     <% @books.each do |book| %>
    <tr>
      <th>
        <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
        <% end %>
      </th>
      <th><%= link_to book.title, book_path(book) %></th>
      <th><%= book.body %></th>
    </th>
    <% end %>
  </tbody>
</table>
<div>